# Global snippets

# time
snippet dte "date"
	`strftime("%m/%d/%Y")`


snippet tme "time"
	`strftime("%H:%M")`


snippet now
	`strftime("%m%d%Y%H%M")`


# attentions
snippet todo
	TODO: ${1}


snippet fixme
	FIXME: ${1}


snippet xxx
	XXX: ${1}


snippet hack
	HACK: ${1}


snippet note
	NOTE: ${1}


snippet bug
	BUG: ${1}


snippet wip
	WIP: ${1}


snippet box2 "Box"
	`!p snip.rv = '┌' + '─' * (len(t[1]) + 2) + '┐'`
	│ $1 │
	`!p snip.rv = '└' + '─' * (len(t[1]) + 2) + '┘'`
	$0
